<p id="notice"><%= notice %></p>

<h1>Content Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_courses.each do |content_course| %>
      <tr>
        <td><%= content_course.course %></td>
        <td><%= content_course.content %></td>
        <td><%= link_to 'Show', course_content_courses_path(content_course.course) %></td>
        <td><%= link_to 'Edit', edit_course_content_course_path(content_course.course,content_course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

