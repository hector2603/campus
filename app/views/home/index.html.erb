<%= render "layouts/menu" %>
<div class="content">
	<div class="container-fluid">		
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<!--inicio del carousel-->
				<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
				  <!-- Indicators -->
				  <ol class="carousel-indicators">
				  	<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
				  	<% @reports.each do |i| %>					  
					    <li data-target="#carousel-example-generic" data-slide-to="<%= i %>"></li>
				    <% end %>
				  </ol>
				 
				  <!-- Wrapper for slides -->
					  <div class="carousel-inner">
					    <div class="item active">
					      <img src="assets/carousel.jpg" alt="Sede tuluá">
					      <div class="carousel-caption">
					      	<h3>Universidad del Valle - Sede Tuluá</h3>
					      </div>
					    </div>
					    <% @reports.each do |report| %>
					    <div class="item">
					      <%= image_tag report.avatar.url(:banner) %>
					      <div class="carousel-caption">
					      	<h3> <%= link_to report.title, report %> </h3>				    
					      </div>
					    </div>	
					    <% end %>				   
					  </div>
				 
				  <!-- Controls -->
				  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
				  	<%= fa_icon "glyphicon-chevron-left"%>
				  </a>
				  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
				    <%= fa_icon "glyphicon-chevron-right"%>
				  </a>
				</div> <!-- Carousel -->
			</div>
		</div>
		<div class="row">
			<div class="col-lg-3 col-md-6 col-sm-6">
				<div class="card card-stats">
					<div class="card-header" data-background-color="green">
						<h3> Cursos Actuales</h3>
					</div>
					<div class="card-content">
						<% @courses.each do |course| %>
						    <tr id="<%=course.id%>">
						      <td class="text-primary " ><%= course.name%></td>
						      <td><%= course.code%></td>
						      <td><%= course.active%></td>
						      <td><%= link_to 'Show', course_user_path(course.id) %></td>
						    </tr>
						    <br>
						<% end %>
					</div>
					<div class="card-footer">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<%= render "layouts/footer" %>