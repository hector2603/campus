<div class="row">
  <div class=" col-md-offset-4  col-sm-offset-4  col-xs-offset-1">
    <div class="card caja ">
      <div class="card-header" data-background-color="red">
      <div class="col-md-3 col-sm-3 col-xs-4 ">
        <div class="cajon">
         <%= image_tag "uni.png", :alt => "univalle +", :title => "univalle", :class => " imagen"%>
        </div>
        </div> 
        <div class="col-md-9 col-sm-9 col-xs-8">
        <div class="text-center">
          <h2 class="texto">Registrarse</h2>
        </div>
        </div> 
      </div>
      <div class="card-content">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group label-floating">
              <%= f.label :email, :class => "control-label" %><br />
              <%= f.email_field :email, autofocus: true, :class => "form-control" %>
            </div>

            <div class="form-group label-floating">
              <%= f.label :Nombre, :class => "control-label" %><br />
              <%= f.text_field :name, autofocus: true, :class => "form-control" %>
            </div>

            <div class="form-group label-floating">
              <%= f.label :Rol,:class => "control-label" %><br />
              <%= f.select :rol, [["Profesor", "2"], ["Estudiante", "3"]], {}, {class: "form-control"} %>
             
            </div>

            <div class="form-group label-floating">
              <%= f.label :Contraseña, :class => "control-label" %>
              <% if @minimum_password_length %>
              <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
              <em>(<%= @minimum_password_length %> Caracteres mínimos)</em>
              <% end %><br />
            </div>

           <div class="form-group label-floating">
              <%= f.label :Confirmar_contraseña, :class => "control-label" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
            </div>

            <div class="input-group">    
                <label class="input-group-btn">
                    <span class="btn btn-default btn-file">
                        <%= fa_icon "camera"%>              
                        Seleccione la Imagen
                        <%= f.file_field :avatar %>              
                    </span>
                </label>
                <input type="text" class="form-control" readonly>
            </div>

            <div class="actions">
              <%= f.submit "Registrar", :class => "btn btn-danger" %>
            </div>
          <% end %>
          <div class="card-footer">
          <div class="stats">
          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
