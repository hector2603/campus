<%= render "layouts/menu" %>
<div class="content">
  <div class="container-fluid">   
    <div class="row">
        <div class="col-md-12">
                <div class="card">
                    <div class="card-header text-center" data-background-color="red">
                        <br>
                        <h2 class="title titulo ">Tus Cursos Asignados</h2>
                    </div>
                    <div class="card-content table-responsive">
                        <table class="table">
                            <thead class="text-primary titulo">
                              <th>Nombre</th>
                              <th>Código</th>
                              <th>Estado</th>
                              <th>Descripción</th>
                            </thead>
                            <tbody>
                            <% @courses.each do |course| %>
                                <tr id="<%=course.id%>">
                                  <td><%= link_to course.name, course_user_path(course.id) %></td>
                                  <td><%= course.code%></td>
                                  <%if course.active %>
                                    <td> Curso Activo </td> 
                                  <%else%>
                                    <td> Curso Inactivo </td> 
                                  <%end%>
                                  <td><%= course.description%></td>                                  
                                </tr>
                            <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>
  </div>
</div>
<%= render "layouts/footer" %>