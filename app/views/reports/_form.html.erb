<%= form_for(report) do |f| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group label-floating">
    <%= f.label :titulo, :class => "control-label" %><br />
    <%= f.text_field :title, autofocus: true, :class => "form-control" %>
  </div>

  <div class="form-group label-floating">
    <%= f.label :contenido, :class => "control-label"%><br />
    <%= f.text_area :contenido, autofocus: true,  :class => "form-control"%>
  </div>

  <div class="form-group label-floating">
    <%= f.label :estado ,:class => "control-label"%><br />
    <%= f.select :active, [["Activado", "true"], ["Desactivado", "false"]], {}, {class: "form-control"} %>
  </div>

  <div class="">
    <%= f.label :Avatar, :class => "control-label" %><br />
    <%= f.file_field :avatar, autofocus: true, :class => "" %>
  </div>

  <br>
  <br>
  <div class="actions">
    <%= f.submit "Noticia", :class => "btn btn-danger"%>
  </div>

<% end %>
