<%= form_for(report) do |f| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group label-floating">
    <%= f.label :titulo, :class => "control-label" %><br />
    <%= f.text_field :title, autofocus: true, :class => "form-control" %>
  </div>

  <div class="form-group label-floating">
    <%= f.label :contenido, :class => "control-label"%><br />
    <%= f.text_area :contenido, autofocus: true,  :class => "form-control"%>
  </div>

  <div class="form-group label-floating">
    <%= f.label :estado ,:class => "control-label"%><br />
    <%= f.select :active, [['Activado', true], ['Desactivado', false]], {}, {class: "form-control"} %>
  </div>

  <div class="input-group">    
      <label class="input-group-btn">
          <span class="btn btn-default btn-file">
              <%= fa_icon "camera"%>              
              Seleccione la Imagen
              <%= f.file_field :avatar %>              
          </span>
      </label>
      <input type="text" class="form-control" readonly>
  </div>

  <br>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="actions">
        <%= f.submit "Guardar", :class => "btn btn-danger btn-block" %>
      </div>
    </div>
  </div>

<% end %>
